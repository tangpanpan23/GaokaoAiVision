/* app.wxss */
@import "styles/common.wxss";
@import "styles/colors.wxss";
@import "styles/layout.wxss";

/* 全局样式 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 页面通用样式 */
.page-container {
  min-height: calc(100vh - 50px);
  padding-bottom: 50px;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  margin: 12px;
  padding: 16px;
}

.card-title {
  font-size: 16px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12px;
}

.card-content {
  color: #666666;
  line-height: 1.5;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 12px 24px;
  border-radius: 8px;
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #007bff, #0056b3);
  color: #ffffff;
  border: none;
}

.btn-primary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-outline {
  background: transparent;
  border: 1px solid #007bff;
  color: #007bff;
}

.btn-outline:active {
  background: #007bff;
  color: #ffffff;
}

.btn-disabled {
  background: #cccccc;
  color: #999999;
  cursor: not-allowed;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 44px;
  border: 1px solid #e9ecef;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 14px;
  background: #ffffff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007bff;
  outline: none;
}

.input-error {
  border-color: #dc3545;
}

/* 标签页样式 */
.tab-bar {
  display: flex;
  background: #ffffff;
  border-bottom: 1px solid #e9ecef;
}

.tab-item {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  font-size: 14px;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #007bff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 30px;
  height: 2px;
  background: #007bff;
  border-radius: 1px;
}

/* 加载样式 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.loading-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid #f3f3f3;
  border-top: 2px solid #007bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
  color: #999999;
}

.empty-state-icon {
  font-size: 48px;
  margin-bottom: 12px;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 14px;
  text-align: center;
}

/* 错误状态样式 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
}

.error-state-icon {
  font-size: 48px;
  color: #dc3545;
  margin-bottom: 12px;
}

.error-state-text {
  font-size: 14px;
  color: #dc3545;
  text-align: center;
  margin-bottom: 16px;
}

.error-state-btn {
  padding: 8px 16px;
  background: #dc3545;
  color: #ffffff;
  border-radius: 6px;
  font-size: 12px;
}

/* 工具类 */
