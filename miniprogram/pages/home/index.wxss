/* pages/home/index.wxss */
@import "../../styles/colors.wxss";
@import "../../styles/layout.wxss";

/* 页面容器 */
.home-container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 欢迎区域 */
.welcome-section {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  padding: 40px 20px 30px;
  color: white;
}

.welcome-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-text {
  flex: 1;
}

.welcome-title {
  display: block;
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 8px;
}

.welcome-subtitle {
  display: block;
  font-size: 14px;
  opacity: 0.9;
}

.user-actions {
  margin-left: 20px;
}

.login-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 20px;
  padding: 8px 16px;
  color: white;
  font-size: 14px;
}

.login-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.user-info {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  padding: 6px 12px;
}

.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  margin-right: 8px;
}

.nickname {
  font-size: 14px;
  max-width: 80px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 功能模块 */
.features-section {
  padding: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16px;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.feature-card {
  background: white;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  border-left: 4px solid #007bff;
  display: flex;
  align-items: center;
  transition: transform 0.2s ease;
}

.feature-card:active {
  transform: scale(0.98);
}

.feature-icon {
  width: 48px;
  height: 48px;
  margin-right: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-icon image {
  width: 32px;
  height: 32px;
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 16px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4px;
}

.feature-subtitle {
  display: block;
  font-size: 12px;
  color: #999999;
  line-height: 1.3;
}

.feature-arrow {
  color: #999999;
  font-size: 18px;
  font-weight: bold;
}

/* 统计数据 */
.stats-section {
  padding: 20px;
  background: white;
  margin: 0 12px 12px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: #007bff;
  margin-bottom: 4px;
}

.stat-label {
  display: block;
  font-size: 12px;
  color: #666666;
}

/* 公告通知 */
.announcements-section {
  padding: 20px;
}

.announcements-list {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.announcement-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #e9ecef;
  transition: background-color 0.2s ease;
}

.announcement-item:last-child {
  border-bottom: none;
}

.announcement-item:active {
  background-color: #f8f9fa;
}

.announcement-badge {
  background: #dc3545;
  color: white;
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 8px;
  margin-right: 12px;
  flex-shrink: 0;
}

.announcement-badge.update {
  background: #ffc107;
  color: #000;
}

.announcement-content {
  flex: 1;
}

.announcement-title {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #333333;
  margin-bottom: 4px;
}

.announcement-summary {
  display: block;
  font-size: 12px;
  color: #666666;
  margin-bottom: 4px;
  line-height: 1.4;
}

.announcement-time {
  display: block;
  font-size: 11px;
  color: #999999;
}

.announcement-arrow {
  color: #999999;
  font-size: 16px;
  font-weight: bold;
  margin-left: 8px;
}

/* 底部信息 */
.footer-section {
  padding: 20px;
  text-align: center;
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-text {
  font-size: 12px;
  color: #999999;
}

.footer-version {
  font-size: 12px;
  color: #999999;
  background: #e9ecef;
  padding: 2px 8px;
  border-radius: 10px;
}

/* 响应式 */
@media (max-width: 375px) {
  .welcome-section {
    padding: 30px 16px 20px;
  }

  .welcome-title {
    font-size: 24px;
  }

  .features-grid {
    grid-template-columns: 1fr;
  }

  .stats-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
}
