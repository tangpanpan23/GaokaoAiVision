/* 颜色变量 */
:root {
  /* 主题色 */
  --primary-color: #007bff;
  --primary-light: #4dabf7;
  --primary-dark: #0056b3;

  /* 辅助色 */
  --success-color: #28a745;
  --warning-color: #ffc107;
  --danger-color: #dc3545;
  --info-color: #17a2b8;

  /* 文字颜色 */
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-muted: #999999;
  --text-white: #ffffff;

  /* 背景色 */
  --bg-white: #ffffff;
  --bg-light: #f8f9fa;
  --bg-gray: #e9ecef;
  --bg-dark: #343a40;

  /* 边框色 */
  --border-color: #e9ecef;
  --border-light: #f8f9fa;
  --border-dark: #dee2e6;

  /* 阴影色 */
  --shadow-color: rgba(0, 0, 0, 0.06);
  --shadow-dark: rgba(0, 0, 0, 0.12);
}

/* 颜色类 */
.text-primary { color: var(--primary-color); }
.text-success { color: var(--success-color); }
.text-warning { color: var(--warning-color); }
.text-danger { color: var(--danger-color); }
.text-info { color: var(--info-color); }
.text-muted { color: var(--text-muted); }
.text-white { color: var(--text-white); }

.bg-primary { background-color: var(--primary-color); }
.bg-success { background-color: var(--success-color); }
.bg-warning { background-color: var(--warning-color); }
.bg-danger { background-color: var(--danger-color); }
.bg-info { background-color: var(--info-color); }
.bg-light { background-color: var(--bg-light); }
.bg-white { background-color: var(--bg-white); }

/* 志愿推荐颜色主题 */
.volunteer-challenge { color: #dc3545; }
.volunteer-stable { color: #28a745; }
.volunteer-safe { color: #ffc107; }

/* 分数等级颜色 */
.score-level-a-plus { color: #e74c3c; }
.score-level-a { color: #e67e22; }
.score-level-b-plus { color: #f39c12; }
.score-level-b { color: #27ae60; }
.score-level-c-plus { color: #3498db; }
.score-level-c { color: #9b59b6; }
.score-level-d { color: #95a5a6; }
